{
    "manifest_version": 3,
    "name": "Select to Copy Text",
    "description": "Select the text you want and click the pop up button for copying it.",
    "version": "1.0",
    "icons": {
        "16": "src/images/icon-16.png",
        "32": "src/images/icon-32.png",
        "48": "src/images/icon-48.png",
        "128": "src/images/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/script.js"],
            "css": ["src/styles.css"]
        }
    ]
}